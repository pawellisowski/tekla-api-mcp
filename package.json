{
  "name": "tekla-api-mcp",
  "version": "1.2.1",
  "description": "MCP server for Tekla Open API documentation with code examples - works with Claude Desktop",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "tekla-api-mcp": "./bin/tekla-api-mcp.js"
  },
  "files": [
    "dist/**/*",
    "bin/**/*",
    "scripts/**/*",
    "parsed-api/**/*",
    "examples/**/*",
    "README.md",
    "LICENSE",
    "*.js"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts", 
    "start": "node dist/index.js",
    "setup": "node scripts/setup.js",
    "prepublishOnly": "npm run build",
    "parse-docs": "node parse-docs.js"
  },
  "keywords": [
    "mcp",
    "tekla",
    "open-api",
    "api",
    "documentation",
    "claude",
    "claude-desktop",
    "model-context-protocol",
    "structures",
    "cad"
  ],
  "author": "Pawel Lisowski",
  "license": "MIT",
  "homepage": "https://github.com/pawellisowski/tekla-api-mcp",
  "repository": {
    "type": "git",
    "url": "https://github.com/pawellisowski/tekla-api-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/pawellisowski/tekla-api-mcp/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "jsdom": "^25.0.1",
    "fuse.js": "^7.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "@types/jsdom": "^21.1.7",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}